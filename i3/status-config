
general {
  colors = true
  color_good = "#BBBBBB"
  color_bad = "#CC1616"
  color_degraded = "#55858E"
  interval = 2
}

order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "load"
order += "volume master"
order += "battery 0"
order += "tztime local"

wireless _first_ {
  format_up = "W: (%quality at %essid) %ip"
  format_down = "W: down"
}

ethernet _first_ {
  # if you use %speed, i3status requires root privileges
  format_up = "E: %ip (%speed)"
  format_down = "E: down"
}

battery 0 {
  status_chr = âš¡
  status_full = ğŸ‘
  status_bat = ğŸ”‹
  status_unk = ?

  last_full_capacity = true
  threshold_type = "percentage"
  low_threshold = 15
  hide_seconds = true

  format = "%status %percentage"
}

run_watch DHCP {
  pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
  pidfile = "/var/run/openvpn.pid"
}

tztime local {
  format = "%Y-%m-%d %H:%M:%S"
}

load {
  format = "load: %1min"
}

disk "/" {
  format = "%avail"
}

