#!/bin/zsh

UUID=uuidgen
git stash -m $UUID --keep-index > /dev/null 2>&1

case $1 in
  -f|--fixup)
    if git cat-file -e $2^{commit}; then
      git commit --fixup $2
      GIT_SEQUENCE_EDITOR=: git rebase -i "$2"^
    fi
    ;;
  -s|--squash)
    if git cat-file -e $2^{commit}; then
      git commit --squash $2
      git rebase -i --autosquash "$2"^
    fi
    ;;
  *)
    git rebase -i $@
esac

if [[ $( git stash list --grep=$UUID | wc -c ) -ne 0 ]]; then
  git stash pop > /dev/null 2>&1
fi

